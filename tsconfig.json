{
	"compilerOptions": {
		// Enable latest features
		"lib": [
			"ESNext",
			"DOM"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"baseUrl": ".",
		// This sets the base directory for resolving non-relative module names
		"paths": {
			"@nano-forge/ui-tools": [
				"modules/ui-tools/index"
			],
			"@nano-forge/sapphire.admin": [
				"modules/sapphire.admin/index"
			],
			"@nano-forge/sapphire.content-editor": [
				"modules/sapphire.content-editor/index"
			],
			"@nano-forge/sapphire.image-editor": [
				"modules/sapphire.image-editor/index"
			],
			"@nano-forge/icon": [
				"modules/icon/index"
			],
			"@nano-forge/awesome-icons": [
				"modules/awesome-icons/index"
			]
		}
	}
}
